{
  "name": "neovim-ink",
  "version": "1.0.0",
  "description": "A Neovim frontend built with Ink (React for the terminal)",
  "type": "module",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    }
  },
  "bin": {
    "neovim-ink": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.tsx",
    "dev": "tsx watch src/index.tsx",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "neovim",
    "ink",
    "tui",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^6.8.0",
    "neovim": "^5.4.0",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
